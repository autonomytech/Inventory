<h1>store category</h1>

<div class="form"><%= render 'form' %></div>

<h1>Listing store_categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Name</th>
      <th>Code</th>
      <th>Created At</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @store_categories.each_with_index do |store_category, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= store_category.name %></td>
        <td><%= store_category.code %></td>
        <td><%= store_category.created_at.to_date %></td>
        <td><%= link_to 'Edit', edit_store_category_path(store_category), remote: true %>&nbsp;&nbsp;<%= link_to 'Destroy', store_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>