<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li>
        <%= link_to home_index_path do %><i class="fa fa-dashboard"></i> Dashboard<%end%>
      </li>
      <li class="active">
        <i class="fa fa-shopping-cart"></i> Store
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="form"><%= render 'form' %></div>
  </div>
  <div class="col-md-8">
    <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Sr.No.</th>
          <th>Name</th>
          <th>Code</th>
          <th>Store Category</th>
          <th>Created At</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
       <% @stores.each_with_index do |store, i| %>
       <tr>
        <td><%= i+1 %></td>
        <td><%= store.name %></td>
        <td><%= store.code %></td>
        <td><%= store.store_category.name%></td>
        <td><%= store.created_at.to_date %></td>
        <td><%= link_to store_path(store), class: 'btn btn-show btn-xs' do %><i class="fa fa-fw fa-desktop"></i> Show<%end%>&nbsp;&nbsp;<%= link_to  edit_store_path(store), class: 'btn btn-success btn-xs', remote: true do %><i class="fa fa-fw fa-pencil"></i> Edit<%end%>&nbsp;&nbsp;<%= link_to store, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-xs' do %><i class="fa fa-fw fa-trash-o"></i> Delete<%end%></td>
       </tr>
       <% end %>
     </tbody>
    </table>
    </div>
    <div>
      <%= link_to 'Download Pdf', stores_stores_path(format: 'pdf'), target: '_blank', class: 'btn btn-success'%>
    </div>
 </div>
</div>