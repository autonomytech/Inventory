<div class="row">
<div class="col-md-1">
<%= link_to 'Pdf', stores_stores_path(format: 'pdf'), target: '_blank'%>
</div>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2">
    <h3>store</h3>
    <div class="form"><%= render 'form' %></div>
  </div>
  <div class="col-md-7">
    <h3>Listing stores</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Sr.No.</th>
          <th>Name</th>
          <th>Code</th>
          <th>Store Category</th>
          <th>Created At</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
       <% @stores.each_with_index do |store, i| %>
       <tr>
        <td><%= i+1 %></td>
        <td><%= store.name %></td>
        <td><%= store.code %></td>
        <td><%= store.store_category.name%></td>
        <td><%= store.created_at.to_date %></td>
        <td><%= link_to 'Show', store_path(store)%>&nbsp;&nbsp;<%= link_to 'Edit', edit_store_path(store), remote: true %>&nbsp;&nbsp;
         <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
       <% end %>
     </tbody>
   </table>
 </div>
</div>